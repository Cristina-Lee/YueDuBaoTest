<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_reset"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blue">

        <Button
            android:id="@+id/btn_resetBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_arrow_back_white_24dp" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_resetBack"
            android:paddingLeft="10dp"
            android:text="设置新密码"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/title_reset"
        android:id="@+id/txt_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="15dp"
            android:text="输入旧密码"
            android:textSize="16sp"
            android:textColor="@color/black" />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="旧密码"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:text="输入新密码"
            android:textSize="16sp"
            android:textColor="@color/black" />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="新密码"/>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:hint="确认新密码"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:text="密码需满足以下要求："
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:text="1.不能包含空格
2.至少包含6个字符
3.至少包含字母、数字、下划线中的2种"
            android:textSize="14sp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/pink"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="确认"
        android:textSize="18sp"
        android:textColor="@color/darkblue" />
</RelativeLayout>