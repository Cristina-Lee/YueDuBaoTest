<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/user_card"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/lightblue">

        <Button
            android:id="@+id/btn_back_center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:background="@mipmap/ic_arrow_back_white_24dp"/>

        <ImageView
            android:id="@+id/image_show"
            android:layout_marginTop="30dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_account_box_white" />
        <View
            android:id="@+id/view_divide_3"
            android:layout_below="@id/image_show"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view_divide_3"
            android:layout_marginBottom="30dp">
            <ImageView
                android:id="@+id/line_divide"
                android:layout_centerHorizontal="true"
                android:layout_height="30dp"
                android:layout_width="2dp"
                android:layout_centerInParent="true"
                android:background="@color/white" />
            <TextView
                android:id="@+id/txt_showaccount"
                android:layout_toStartOf="@id/line_divide"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="yuedubao123"/>

                <TextView
                    android:id="@+id/txt_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/line_divide"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_centerVertical="true"
                    android:text="修改个人资料"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/txt_tip"
                    android:background="@mipmap/ic_border" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/view_divide_4"
        android:layout_below="@id/user_card"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        style="@style/child_layout_2"
        android:id="@+id/account_tie"
        android:layout_below="@id/view_divide_4">
        <ImageView
            android:id="@+id/center_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_person_outline" />
        <TextView
            style="@style/textview_center"
            android:layout_toEndOf="@id/center_1"
            android:text="账号绑定"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_chevron_right" />
    </RelativeLayout>
    <View style="@style/divider_style"
        android:id="@+id/view_1"
        android:layout_below="@id/account_tie"/>

    <RelativeLayout
        android:clickable="true"

        style="@style/child_layout_2"
        android:id="@+id/account_password"
        android:layout_below="@id/view_1">
        <ImageView
            android:id="@+id/center_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_lock_outline_grey" />
        <TextView
            style="@style/textview_center"
            android:layout_toEndOf="@id/center_2"
            android:text="账号密码"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_chevron_right" />
    </RelativeLayout>
    <View style="@style/divider_style"
        android:id="@+id/view_2"
        android:layout_below="@id/account_password"/>

    <RelativeLayout
        style="@style/child_layout_2"
        android:id="@+id/account_secure"
        android:layout_below="@id/view_2">
        <ImageView
            android:id="@+id/center_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_account_secure" />
        <TextView
            style="@style/textview_center"
            android:layout_toEndOf="@id/center_3"
            android:text="账号保护"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_chevron_right" />
    </RelativeLayout>
    <View style="@style/divider_style"
        android:id="@+id/view_3"
        android:layout_below="@id/account_secure"/>

    <RelativeLayout
        style="@style/child_layout_2"
        android:id="@+id/secure_center"
        android:layout_below="@id/view_3">
        <ImageView
            android:id="@+id/center_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_verified_user_grey" />
        <TextView
            style="@style/textview_center"
            android:layout_toEndOf="@id/center_4"
            android:text="安全中心"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_chevron_right" />
    </RelativeLayout>
    <View style="@style/divider_style"
        android:id="@+id/view_4"
        android:layout_below="@id/secure_center"/>

    <RelativeLayout
        style="@style/child_layout_2"
        android:id="@+id/settings"
        android:layout_below="@id/view_4">
        <ImageView
            android:id="@+id/center_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_settings_grey" />
        <TextView
            style="@style/textview_center"
            android:layout_toEndOf="@id/center_5"
            android:text="设置"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_chevron_right" />
    </RelativeLayout>
    <View style="@style/divider_style"
        android:id="@+id/view_5"
        android:layout_below="@id/settings"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/pink"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="退出账号"
        android:textColor="@color/red" />

</RelativeLayout>